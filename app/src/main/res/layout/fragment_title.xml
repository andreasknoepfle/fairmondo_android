<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:context="android.mobile.handler.de.fairmondo.ui.fragments.TitleFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:paddingBottom="20dp"
        android:id="@+id/fragment_title_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/transparent_white_80"
        android:layout_alignBottom="@id/fragment_title_image"
        android:background="@color/transparent_grey_80"
        android:id="@+id/fragment_title_image_description"/>

</RelativeLayout>
