<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_grid_item"
    android:gravity="center"
    android:id="@+id/image_adapter_card_view"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    android:layout_gravity="center"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_alignParentTop="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="4dp">

        <de.handler.mobile.android.fairmondo.presentation.views.CustomNetworkImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:paddingBottom="4dp"
            android:minHeight="150dp"
            android:id="@+id/image_adapter_image"
            android:src="@drawable/fairmondo_small"
            android:contentDescription="@string/product_hint" />

        <TextView
            style="@style/textview_banner_style_grid_view"
            android:id="@+id/image_adapter_text" />

</android.support.v7.widget.CardView>
