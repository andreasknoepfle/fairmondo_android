<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/main_title_container"
        android:paddingTop="?attr/actionBarSize"
        android:orientation="vertical"/>

    <ProgressBar
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/transparent_blue_50"
        android:id="@+id/main_progress_bar"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/main_title_container"
        android:id="@+id/main_category_spinner"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_centerInParent="true"
        android:id="@+id/main_products_container"
        android:orientation="vertical"
        android:layout_below="@id/main_category_spinner"/>

</RelativeLayout>

