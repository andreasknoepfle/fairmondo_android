<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_title_container"
        android:paddingTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:animateLayoutChanges="true"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/main_title_container"
        android:id="@+id/main_category_spinner"/>


    <ProgressBar
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/main_category_spinner"
        android:background="@color/fairmondo_yellow"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/main_progress_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_centerInParent="true"
        android:id="@+id/main_products_container"
        android:orientation="vertical"
        android:layout_below="@id/main_category_spinner"
        android:animateLayoutChanges="true"/>

</RelativeLayout>

