<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/main_title_container"
        android:paddingTop="?attr/actionBarSize"
        android:orientation="vertical"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/main_title_container"
        android:id="@+id/main_category_spinner"/>

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/main_category_spinner">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_progress_bar"
                android:paddingTop="@dimen/abc_action_bar_progress_bar_size"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:layout_centerInParent="true"
                android:id="@+id/main_products_container"
                android:orientation="vertical" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>

