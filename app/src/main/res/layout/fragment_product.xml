<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="60dp"
        android:id="@+id/fragment_product_main_container"
        android:background="@color/transparent_white_80">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.handler.mobile.android.fairmondo.ui.views.CustomNetworkImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/fragment_product_image_view" />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="150dp"
                android:id="@+id/fragment_product_progressBar" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_product_content_container"
                android:layout_below="@id/fragment_product_image_view"
                tools:context="android.mobile.handler.de.fairmondo.ui.fragments.ProductFragment"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:minHeight="50dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:id="@+id/fragment_product_title"
                    android:lines="2" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_product_description"
                    android:layout_below="@id/fragment_product_title"
                    android:id="@+id/fragment_product_button_description"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_product_terms"
                    android:layout_below="@id/fragment_product_button_description"
                    android:id="@+id/fragment_product_button_terms"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_product_donation"
                    android:layout_below="@id/fragment_product_button_terms"
                    android:id="@+id/fragment_product_button_fair_percent"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fragment_product_button_fair_percent"
                    android:textSize="30sp"
                    android:gravity="end"
                    android:padding="15dp"
                    android:id="@+id/fragment_product_price"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/fragment_product_button_buy"
            android:background="@drawable/selector_button_coloured"
            android:text="@string/fragment_product_buy"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="invisible"
            android:background="@drawable/shape_round"
            android:layout_alignEnd="@id/fragment_product_button_buy"
            android:layout_alignRight="@id/fragment_product_button_buy"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:textSize="30sp"
            android:id="@+id/fragment_product_item_count_text_view"/>

    </RelativeLayout>
</RelativeLayout>
