<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- enable window content transitions -->
        <item name="android:background">@android:color/white</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/fairmondo_blue_dark</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/fairmondo_blue_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/fairmondo_yellow_20</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

