<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Base.AppCompat.Light.DarkActionBar">

    </style>


    <style name="dialog_register_edittext">
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="textview_banner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:textSize">55sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/transparent_grey_80</item>
    </style>

    <style name="textview_banner_style_splash" parent="textview_banner_style">
        <item name="android:layout_marginTop">44dp</item>
    </style>

    <style name="textview_banner_style_grid_view" parent="textview_banner_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_grid_item">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">20dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:columnWidth">90dp</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <style name="style_features_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="style_featured_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent_grey_20</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/transparent_white_80</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
