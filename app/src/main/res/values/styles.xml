<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="dialog_register_edittext">
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
    </style>

    <style name="textview_banner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:textSize">55sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/transparent_grey_20</item>
    </style>

    <style name="textview_banner_style_splash" parent="textview_banner_style">
        <item name="android:layout_marginTop">44dp</item>
    </style>

    <style name="textview_banner_style_grid_view" parent="textview_banner_style">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/transparent_grey_80</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_grid_item">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_features_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:minHeight">150dp</item>
    </style>

    <style name="style_featured_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent_grey_20</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/transparent_white_80</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="product_detail_section_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="container_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="container_default.opaque">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="filter_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_filter</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="basic_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="basic_view.radio_button">
        <item name="android:layout_height">@dimen/height_filter</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="basic_view.header">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">24dp</item>
    </style>

    <style name="empty_fragment_error">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text_view_condition">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_round_grey</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="text_view_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
