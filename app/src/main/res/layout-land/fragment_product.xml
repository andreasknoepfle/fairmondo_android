<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent_white_80">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="android.mobile.handler.de.shopprototype.ui.fragments.ProductFragment"
            android:orientation="vertical">


            <de.handler.mobile.android.shopprototype.util.CustomNetworkImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingTop="?attr/actionBarSize"
                android:scaleType="centerInside"
                android:id="@+id/fragment_product_image_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/fragment_product_image_container"
                android:layout_alignBottom="@id/fragment_product_image_view">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/transparent_white_20"/>

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@id/fragment_product_cart_add_image_button"
                    android:layout_toStartOf="@id/fragment_product_cart_add_image_button"
                    android:id="@+id/fragment_product_item_count_text_view"/>

                <de.handler.mobile.android.shopprototype.util.RoundNetworkImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/fragment_product_cart_add_image_button"
                    android:background="@drawable/custom_button"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:layout_below="@id/fragment_product_image_container"
                android:textSize="30sp"
                android:gravity="center"
                android:id="@+id/fragment_product_title"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_product_description"
                android:layout_below="@id/fragment_product_title"
                android:id="@+id/fragment_product_button_description"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_product_terms"
                android:layout_below="@id/fragment_product_button_description"
                android:id="@+id/fragment_product_button_terms"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_product_donation"
                android:layout_below="@id/fragment_product_button_terms"
                android:id="@+id/fragment_product_button_fair_percent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_product_button_fair_percent"
                android:textSize="30sp"
                android:gravity="end"
                android:padding="15dp"
                android:id="@+id/fragment_product_price"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
